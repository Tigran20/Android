<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/questions_color</item>
        <item name="colorPrimaryDark">@color/questions_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Name field margins-->
    <style name="name_field_margins">
        <item name="android:layout_marginLeft">@dimen/layout_margin1</item>
        <item name="android:layout_marginRight">@dimen/layout_margin1</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- TextView margins-->
    <style name="TextView_margins">
        <item name="android:layout_marginLeft">@dimen/layout_margin1</item>
        <item name="android:layout_marginRight">@dimen/layout_margin1</item>
        <item name="android:layout_marginTop">@dimen/layout_margin4</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin4</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!-- TextView questions style-->
    <style name="TextView_questions">
        <item name="android:layout_margin">@dimen/layout_margin3</item>
        <item name="android:textSize">@dimen/text_size2</item>
        <item name="android:textColor">@color/questions_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/ny_image_background</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <!-- RadioButtons style-->
    <style name="RadioButtons">
        <item name="android:layout_marginLeft">@dimen/layout_margin1</item>
        <item name="android:layout_marginRight">@dimen/layout_margin1</item>
        <item name="android:background">@color/ny_image_background</item>
    </style>

    <!-- Emoji variants margins-->
    <style name="emoji_var_margins">
        <item name="android:layout_marginLeft">@dimen/layout_margin4</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Emoji answer margins-->
    <style name="emoji_answer_margins">
        <item name="android:layout_marginRight">@dimen/layout_margin3</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <!-- TextView Emoji questions style-->
    <style name="TextView_emoji_questions">
        <item name="android:layout_margin">@dimen/layout_margin3</item>
        <item name="android:textSize">@dimen/text_size2</item>
        <item name="android:textColor">@color/questions_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/borders</item>
    </style>

    <!-- Emoji buttons style-->
    <style name="emoji_buttons">
        <item name="android:background">@drawable/borders</item>
        <item name="android:layout_marginLeft">@dimen/padding2</item>
        <item name="android:layout_marginRight">@dimen/padding2</item>
        <item name="android:layout_marginTop">@dimen/padding1</item>
        <item name="android:layout_marginBottom">@dimen/border</item>
        <item name="android:paddingLeft">@dimen/border</item>
        <item name="android:paddingRight">@dimen/border</item>
    </style>

    <!-- NY buttons style-->
    <style name="ny_buttons">
        <item name="android:background">@drawable/ny_borders</item>
        <item name="android:layout_marginLeft">@dimen/padding2</item>
        <item name="android:layout_marginRight">@dimen/padding2</item>
        <item name="android:layout_marginBottom">@dimen/padding1</item>
        <item name="android:paddingLeft">@dimen/padding2</item>
        <item name="android:paddingRight">@dimen/padding2</item>
    </style>

</resources>
